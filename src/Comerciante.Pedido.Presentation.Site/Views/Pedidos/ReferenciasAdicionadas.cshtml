@using Comerciante.Pedido.Application.ViewModels
@model PedidoReferenciaJaAddViewModel

@{
    ViewData["Title"] = $"Referencias já adicionadas Pedido {Model.Pedido.Numero}";
}
<h2>Referencias já adicionadas</h2>
<h3>Pedido Nº @Model.Pedido.Numero</h3>
<hr />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">Referência</th>
            <th class="text-center">Descrição</th>
            <th class="text-center">Quantidade Peças</th>
            <th class="text-center">Total R$</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody data-bind="foreach : ViewModel.pedidoReferencias">
        <tr>
            <td style="text-align:center" data-bind="text : referencia.codigo" />
            <td style="text-align:center" data-bind="text : referencia.descricao" />
            <td style="text-align:center" data-bind="text : quantidade" />
            <td style="text-align:center" data-bind="text : total" />
            <td>
                <button class="btn btn-danger center-block" data-bind="click : ViewModel.excluir">
                    <span class="glyphicon glyphicon-remove"></span>
                    <span>Excluir</span>
                </button>
            </td>
        </tr>
    </tbody>
</table>
@section Scripts{
    <script>
        var modelSer = @Json.Serialize(Model.Pedido_Referencias);
    </script>
    <script src="~/lib/remarkable-bootstrap-notify/dist/bootstrap-notify.min.js"></script>
    <script src="~/js/referenciasAdicionadas.js"></script>
}
