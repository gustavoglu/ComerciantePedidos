@using Comerciante.Pedido.Application.ViewModels;
@model List<MeusPedidosViewModel>


@{
    ViewData["Title"] = "Meus Pedidos";
}
<h2>Meus Pedidos</h2>
<button onclick="window.location.href = '@Url.Action("Criar")'" class="btn btn-success">
  Novo Pedido
</button>
<div id="pedidoContent">
    <table class="table ">
        <thead>
            <tr>
                <th>Ped. Numero</th>
                <th>Total R$</th>
                <th>Total Peças</th>
                <th>Total Referências</th>
                <th>Finalizado</th>
            </tr>
        </thead>
        <tbody data-bind="foreach : ViewModel.pedidos">
            <tr>
                <td data-bind="text : Numero"></td>
                <td data-bind="text : TotalPedido"></td>
                <td data-bind="text : TotalPecas"></td>
                <td data-bind="text : TotalReferencias"></td>
                <td data-bind="text : Finalizado"></td>
                <td>
                    <div class="">
                        <button data-bind="click : ViewModel.editarPedido" class="btn btn-warning">
                            <span class="glyphicon glyphicon-edit"></span>
                            <span>Editar</span>
                        </button>
                        <button data-bind="click : ViewModel.excluirPedido" class="btn btn-danger">
                            <span class="glyphicon glyphicon-remove"></span>
                            <span>Excluir</span>
                        </button>
                        <button data-bind="click : ViewModel.finalizarPedido,visible : Finalizado() == 'Não'" class="btn btn-info">
                            <span class="glyphicon glyphicon-ok"></span>
                            <span>Finalizar</span>
                        </button>
                    </div>

                </td>
            </tr>

        </tbody>
    </table>
</div>


@section scripts {

    <script>
        var modelSer = @Json.Serialize(Model);
    </script>
    <script src="~/lib/remarkable-bootstrap-notify/dist/bootstrap-notify.min.js"></script>
    <script src="~/js/meusPedidos.js"></script>
}